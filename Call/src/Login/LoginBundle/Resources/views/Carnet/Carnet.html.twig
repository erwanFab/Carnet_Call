{%  extends 'base.html.twig' %}
 

{% block content %}
{{ include ('LoginLoginBundle:Default:VerticalBar.html.twig') }} 
<div class="Encadrement">
<div class="fenetre">
			<h1 class="Avatar">Carnet d'adresse</h1>

			<div class="count">
							
				<img src="{{ asset('bundles/loginlogin/img/logo_count.png') }}"width="100" height="100" alt="logo"/>  {{ pagination.getTotalItemCount }} Personnes

			</div>
	
			
			<div class="dark-theme">
   							 {{ knp_pagination_render(pagination) }}
			</div>
			
			<table class="personne"id="personne">
			
						<thead class="Entete">
								     <tr>
								        <th>{{ knp_pagination_sortable(pagination, ' ', 'a.picture_name') }}</th>
						    			<th>{{ knp_pagination_sortable(pagination, 'Prenom', 'a.prenom') }}</th>
						    			<th{% if pagination.isSorted('a.nom') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nom', 'a.nom') }}</th>
						   				 <th>{{ knp_pagination_sortable(pagination, 'Categories','a.id_cat') }}</th>
								     </tr>
					   </thead>
							{# table body #}
							{% for contact in pagination %}
							<tr {% if loop.index is odd %}class="color"{% endif %}>
							    
							     		<td class="picture">
							     
												{% if contact.picture_name is defined %}
							     				 		<img src="{{app.request.basepath}}/uploads/pictures/{{contact.picture_name}}" width="100px",Height="100px" />
							   					{% else %}
							    								Pas d'image de profil charg√©e !
												{% endif %}
										</td>
										<td class="Prenom">{{ contact.prenom }}</td>
    									<td class = "Nom"><a href="{{ path('login_login_complement', {'id': contact.id_personne ,'nom': contact.nom ,'prenom': contact.prenom }) }}"><ul id="list">{{ contact.nom }}</ul></a></td>
    									<td>{{ contact.nom_categorie }}</td>
    
    						{% endfor %}
							</tr>
								
								
			
			</table>
			<div class="dark-theme">
   							 {{ knp_pagination_render(pagination) }}
			</div>
			  {% if  page != maxpage %}
				<div class="alphabetic" role="toolbar">
		  				  <div class="btn-group-vertical" role="group" aria-label="First group">
						    <button type="button" class="btn btn-primary" id ="button" name="alphabet" onclick='alphabetSearch(-1);' >All</button>
						    <button type="button" class="btn btn-secondary" id ="button" onclick='alphabetSearch(0);'>A</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch(1);'>B</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch(2);'>C</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch(3);'>D</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>E</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>F</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>G</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>H</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>I</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>J</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>K</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>L</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>M</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>O</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>P</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>Q</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>R</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>S</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>T</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>U</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>V</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>W</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>X</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>Y</button>
						    <button type="button" class="btn btn-secondary"id ="button" onclick='alphabetSearch()'>Z</button>
						    
						  </div>
						  
						    	
						    {% endif %}
 
						  </div>
				</div>   
	</div>
</div>




{%  endblock %}